{
  "name": "pf4-webcomponents-poc",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "main": "es/index.js",
  "files": [
    "es/**/*"
  ],
  "scripts": {
    "build": "yarn build:modules && yarn build:bundle:dev && yarn build:bundle:prod && yarn cp:fonts",
    "build:modules": "cross-env NODE_ENV=development gulp build:modules",
    "build:bundle:dev": "cross-env NODE_ENV=development gulp build:bundle",
    "build:bundle:prod": "cross-env NODE_ENV=production gulp build:bundle",
    "cp:fonts": "mkdir -p public/fonts && cp -r node_modules/@patternfly/patternfly/assets/fonts/* public/fonts/",
    "ci-check": "yarn format:diff && yarn lint && yarn typecheck && yarn test && yarn build",
    "clean": "gulp clean",
    "format": "prettier --write \"**/*.{css,js,md,scss}\"",
    "format:diff": "prettier --check \"**/*.{css,js,md,scss}\"",
    "format:staged": "prettier --write",
    "lint": "eslint .",
    "lint:staged": "eslint",
    "test": "gulp test",
    "test:unit": "gulp test:unit",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "start": "yarn storybook",
    "storybook": "start-storybook -p 9000 -s public",
    "storybook:angular": "start-storybook -p 9001 -c .storybook/angular -s public",
    "storybook:react": "start-storybook -p 9002 -c .storybook/react -s public",
    "build-storybook": "build-storybook -s public",
    "deploy-storybook": "storybook-to-ghpages"
  },
