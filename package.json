  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        50
      ],
      "body-max-line-length": [
        2,
        "always",
        72
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn format:staged",
      "yarn lint:staged",
      "git add"
    ],
    "*.{css,md,scss}": [
      "yarn format:staged",
      "git add"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 130,
    "singleQuote": true,
    "trailingComma": "es5"
  }
